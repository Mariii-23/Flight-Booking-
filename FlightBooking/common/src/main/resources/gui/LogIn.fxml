<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/17">
    <children>
        <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" maxWidth="1.7976931348623157E308" prefWidth="200.0" spacing="16.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Log in"/>
                        <GridPane hgap="10.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="90.0" minWidth="10.0"
                                                   prefWidth="53.0"/>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="137.0" minWidth="10.0" prefWidth="137.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <TextField fx:id="nif" onAction="#login" GridPane.columnIndex="1"/>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="NIF"/>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password" GridPane.rowIndex="1"/>
                                <PasswordField fx:id="password" onAction="#login" GridPane.columnIndex="1"
                                               GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                        <Pane fx:id="errors" prefWidth="200.0" styleClass="errors"/>
                        <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                onAction="#login" text="Log in"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
